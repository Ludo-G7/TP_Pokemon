{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ detailPok.name }}{% endblock %}



{% block header %}
    <nav aria-label="navbar" class="navbar">
        <ul>
            <li><a href="{{ path('main_home') }}">Accueil</a></li>
            <li><a href="{{ path('main_pokedex') }}">Pokedex</a></li>
            <li><span aria-current="page">{{ detailPok.name }}</span></li>
            <li><a href="{{ path('main_ajout') }}">Ajout Pokemon</a></li>
        </ul>
    </nav>
    <div class="logoPokemon">
        <a href="{{ path('main_home') }}"><img src="{{ asset('img/pokemon/pokemon_logo.svg.png')}}" width="250" height="80" alt="logo"></a>
    </div>
{% endblock %}



{% block body %}
    <section class="detailPok">

        <h2>{{ detailPok.name }}</h2>

        <div><img src="{{ asset('img/pokemon/'~detailPok.image) }}" width="350" height="350" alt="{{ detailPok.name }}"></div>

        <div class="description" >{{ detailPok.description }}</div>

        <div class="Att-def">Attaque : {{ detailPok.attaque }}</div><br>
        <div class="Att-def">Defense : {{ detailPok.defense }}</div>

    </section>
{% endblock %}

{% block footer %}
    <div class="footer">
        {{ "now" | date('Y') }} &copy;Pokemon
    </div>
{% endblock %}

